<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jsyoon.settingpref.MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting preference example"
        android:padding="20dp" />

    <CheckedTextView
        android:id="@+id/setting1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="setting1"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"/>
    <CheckedTextView
        android:id="@+id/setting2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="setting2"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"/>
    <CheckedTextView
        android:id="@+id/setting3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="setting3"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35dp"
        android:text="Text Color Example" />

</LinearLayout>
